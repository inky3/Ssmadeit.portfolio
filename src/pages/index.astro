---
import "../styles/globals.css";
import SiteHeader from "../components/SiteHeader.astro";
import Hero from "../components/Hero.astro";
import ResumeBand from "../components/ResumeBand.astro";
import VideoPair from "../components/VideoPair.astro";
import GalleryGrid from "../components/GalleryGrid.astro";
import SiteFooter from "../components/SiteFooter.astro";


// Replace these assets later
const highlights = [
  { title: "Product Motion — 01", thumb: "https://images.unsplash.com/photo-1518779578993-ec3579fee39f?q=80&w=1600&auto=format&fit=crop", src: "dQw4w9WgXcQ", embed: "youtube" },
  { title: "Title Sequence — 02", thumb: "https://images.unsplash.com/photo-1603232644140-bb47da511b92?q=80&w=1600&auto=format&fit=crop", src: "76979871", embed: "vimeo" }
];

const graphics = [
  { title: "Graphic Pair — A", thumb: "https://images.unsplash.com/photo-1529245019870-59b249281fd5?q=80&w=1600&auto=format&fit=crop", src: "/videos/clip-a.mp4" },
  { title: "Graphic Pair — B", thumb: "https://images.unsplash.com/photo-1574169208507-84376144848b?q=80&w=1600&auto=format&fit=crop", src: "/videos/clip-b.mp4" }
];

const gallery = Array.from({length: 9}).map((_,i) => ({
  src: `https://picsum.photos/seed/${i+11}/1200/800`
}));
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Thanaphonchai | 3D & Motion Graphic</title>
    <meta name="description" content="Portfolio one-pager — 3D & Motion Graphic by Thanaphonchai" />
    <link rel="icon" href="/favicon.svg" />
    <meta property="og:title" content="Thanaphonchai | 3D & Motion Graphic" />
    <meta property="og:description" content="Portfolio one-pager — 3D & Motion Graphic by Thanaphonchai" />
    <meta property="og:image" content="/og.jpg" />
    <meta property="og:type" content="website" />
  </head>
  <body>
    <SiteHeader />
    <Hero />
    <ResumeBand />
    <VideoPair id="highlights" heading="Highlights (2 clips)" items={highlights} />
    <VideoPair id="graphics" heading="Graphics (paired clips)" items={graphics} />
    <GalleryGrid id="gallery" heading="Gallery" items={gallery} />
    <SiteFooter />
  </body>
</html>
